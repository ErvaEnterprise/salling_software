<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard | Admin Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-white">

  <!-- Header -->
  <%- include('./partials/header') %>

  <div class="flex">

    <!-- Sidebar -->
    <%- include('./partials/sidebar') %>

    <!-- Main Content -->
    <main class="flex-1 p-6">

      <!-- Welcome + Balance -->
      <div class="mb-6">
        <h2 class="text-2xl font-bold">ðŸ‘‹ Welcome, <%= admin1.name %></h2>
        <p class="text-lg mt-2">Current Balance:
          <span class="font-semibold text-green-600 dark:text-green-400">â‚¹ <%= admin1.wallet %></span>
        </p>
      </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
          <p class="text-sm">Total Sales</p>
          <p class="text-xl font-bold text-green-500">â‚¹ <%= totalSales %></p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
          <p class="text-sm">Total Purchases</p>
          <p class="text-xl font-bold text-red-500">â‚¹ <%= totalPurchases %></p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
          <p class="text-sm">Total Admins</p>
          <p class="text-xl font-bold text-blue-500"><%= totalAdmins %></p>
        </div>
      </div>

      <!-- Filters -->
      <div class="bg-white dark:bg-gray-800 p-4 rounded shadow mb-6">
        <h3 class="text-lg font-semibold mb-3">ðŸ“… Filter Charts</h3>
        <form method="GET" action="/dashboard" class="flex flex-wrap gap-4">
          <input type="date" name="from" class="p-2 border rounded dark:bg-gray-700 dark:border-gray-600" />
          <input type="date" name="to" class="p-2 border rounded dark:bg-gray-700 dark:border-gray-600" />
          <select name="admin" class="p-2 border rounded dark:bg-gray-700 dark:border-gray-600">
            <option value="">All Admins</option>
            <% adminsList.forEach(a => { %>
              <option value="<%= a._id %>"><%= a.name %></option>
            <% }) %>
          </select>
          <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded">
            Apply Filter
          </button>
        </form>
      </div>

      <!-- Charts Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
          <h4 class="text-lg font-semibold mb-2">ðŸ“Š Sales by Admin</h4>
          <canvas id="salesChart"></canvas>
        </div>
        <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
          <h4 class="text-lg font-semibold mb-2">ðŸ“¦ Purchases by Admin</h4>
          <canvas id="purchaseChart"></canvas>
        </div>
      </div>

    </main>
  </div>

  <!-- Footer -->
  <%- include('./partials/footer') %>

  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const salesCtx = document.getElementById('salesChart').getContext('2d');
    const salesChart = new Chart(salesCtx, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(adminNames) %>,
        datasets: [{
          label: 'Sales',
          data: <%- JSON.stringify(salesData) %>,
          backgroundColor: '#4F46E5'
        }]
      }
    });

    const purchaseCtx = document.getElementById('purchaseChart').getContext('2d');
    const purchaseChart = new Chart(purchaseCtx, {
      type: 'pie',
      data: {
        labels: <%- JSON.stringify(adminNames) %>,
        datasets: [{
          label: 'Purchases',
          data: <%- JSON.stringify(purchaseData) %>,
          backgroundColor: ['#10B981', '#F59E0B', '#EF4444', '#3B82F6']
        }]
      }
    });
  </script>

</body>
</html>
